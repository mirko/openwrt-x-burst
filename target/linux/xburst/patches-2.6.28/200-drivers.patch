+#ifdef CONFIG_SOC_JZ4740
+	REG_CPM_SCR |= CPM_SCR_USBPHY_ENABLE;
+#elif CONFIG_SOC_JZ4750
+	REG_CPM_OPCR |= CPM_OPCR_UDCPHY_ENABLE;
