+			/* Reply with a ZLP on next IN token */
+			usb_setb(USB_REG_CSR0,
+				 (USB_CSR0_SVDOUTPKTRDY | USB_CSR0_DATAEND));
+			return;
+		}
+		break;
+
+	default:
+		break;
+	}
